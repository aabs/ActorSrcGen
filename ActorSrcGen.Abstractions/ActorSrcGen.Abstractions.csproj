<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<Description>Attribute and interface definitions for ActorSrcGen</Description>
		<Configurations>Debug;Release;Gen</Configurations>
		<IsRoslynComponent>true</IsRoslynComponent>
		<AssemblyName>ActorSrcGen.Abstractions</AssemblyName>
		<Title>Actor Source Generator Abstractions </Title>
		<PackageReadmeFile>ReadMe.md</PackageReadmeFile>
		<Authors>Andrew Matthews</Authors>
		<!--<IncludeBuildOutput>false</IncludeBuildOutput>-->
	</PropertyGroup>

	<ItemGroup>
	  <None Include="..\ReadMe.md" Link="ReadMe.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="System.Collections.Immutable" Version="7.0.0" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Update="Microsoft.SourceLink.GitHub" Version="1.1.1" />
	</ItemGroup>

</Project>
